{
  "name": "opera-toolkit",
  "version": "0.64.1",
  "description": "Opera Web UI Toolkit",
  "main": "dist/toolkit-0.64.1.js",
  "module": "src/index.js",
  "scripts": {
    "test": "mocha --opts test/mocha.opts",
    "test:server": "node test/server.js",
    "demo": "node demo/server.js",
    "coverage": "nyc mocha",
    "eslint": "eslint src/core/*.js test/*.spec.js",
    "update-opera": "npm run install && cp dist/toolkit-0.64.1.js $WORK_DIR",
    "watch": "npm-watch update-opera",
    "install": "rollup -c"
  },
  "pre-commit": [
    "eslint",
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/operasoftware/toolkit.git"
  },
  "keywords": [
    "opera",
    "web ui",
    "toolkit",
    "native",
    "javascript",
    "framework",
    "virtual dom"
  ],
  "author": "Aleksander Åšwitalski",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/operasoftware/toolkit/issues"
  },
  "homepage": "https://github.com/operasoftware/toolkit#readme",
  "dependencies": {
    "@babel/core": "^7.6.2",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "@babel/register": "^7.7.0",
    "lazy-module-loader": "https://github.com/shfx/lazy-module-loader.git#exporting-issues",
    "rollup": "^1.21.4",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-terser": "^5.1.2"
  },
  "devDependencies": {
    "assert": "^2.0.0",
    "babel-eslint": "^10.0.3",
    "dom-test": "^0.4.0",
    "eslint": "^5.16.0",
    "express": "^4.17.1",
    "mocha": "^6.2.0",
    "npm-watch": "0.6.0",
    "nyc": "^14.1.1",
    "path": "^0.12.7",
    "pre-commit": "^1.2.2",
    "sinon": "^7.4.1",
    "tap": "^14.6.1"
  },
  "watch": {
    "update-opera": {
      "patterns": [
        "src",
        "test"
      ],
      "extensions": "js",
      "quiet": true
    }
  }
}
